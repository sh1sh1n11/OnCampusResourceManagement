<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="msisproject1.com.project1.ch_confirm_cancellation">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ch_title_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/cancelcafehrs1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="


                                            Warning!!!

                  All the assigned shift for that duration
                  will be cancelled. "
        android:id="@+id/ch_confirm_warning1"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:layout_below="@+id/ch_title_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="

                     Are you sure you want to continue? "
        android:id="@+id/ch_confirm_warning"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#ff000000"
        android:layout_below="@+id/ch_confirm_warning1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ch_yes_button"
        android:id="@+id/ch_yes_button"
        android:textStyle="bold"
        android:background="#ffadadad"
        android:textColor="#ff000000"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/ch_no_button_button"
        android:layout_alignStart="@+id/ch_no_button_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ch_no_button"
        android:id="@+id/ch_no_button_button"
        android:background="#ffadadad"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_below="@+id/ch_yes_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />

</RelativeLayout>