<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Grid">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Employee Name:"
            android:id="@+id/textView10"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Employee ID:"
            android:id="@+id/textView11"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EmployeeNameSpinner"
            android:layout_row="0"
            android:layout_column="1"
            android:spinnerMode="dropdown"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Shift Date:"
            android:id="@+id/textView12"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EmployeeIDSpinner"
            android:layout_row="1"
            android:layout_column="1"
            android:spinnerMode="dropdown"
            android:layout_marginTop="-5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Start Time:"
            android:id="@+id/textView13"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"/>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:id="@+id/AssignShiftPickDate"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/calendar48"
            android:background="@android:color/transparent"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="End Time:"
            android:id="@+id/textView14"
            android:layout_column="0"
            android:layout_row="10"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AssignShiftPickStartTime"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/clock48"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AssignShiftPickEndTime"
            android:layout_row="10"
            android:layout_column="1"
            android:src="@drawable/future48"
            android:background="@android:color/transparent"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/assignShiftConfirm"
            android:layout_row="25"
            android:layout_column="1"
            android:src="@drawable/checkmark48"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:paddingLeft="12dp"
            android:layout_marginTop="68dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Confirm:"
            android:id="@+id/textView15"
            android:layout_row="25"
            android:layout_column="0"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="155dp"
            android:layout_gravity="top" />

    </GridLayout>

</RelativeLayout>