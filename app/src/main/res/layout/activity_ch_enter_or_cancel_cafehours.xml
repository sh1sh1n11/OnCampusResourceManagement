<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="msisproject1.com.project1.ch_enter_or_cancel_cafehours">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ch_title_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ch_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ch_cafe_name"
        android:id="@+id/ch_cafe_name"
        android:layout_marginTop="53dp"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:layout_below="@+id/ch_title_bar"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ch_enter_cafe_name"
        android:layout_toRightOf="@+id/ch_cafe_name"
        android:layout_marginLeft="69dp"
        android:layout_marginStart="69dp"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignRight="@+id/ch_title_bar"
        android:layout_alignEnd="@+id/ch_title_bar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/ch_cafe_name"
        android:layout_below="@+id/ch_title_bar" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Enter Cafe Hours    "
        android:id="@+id/ch_enter_cafe_hours"
        android:textStyle="bold"
        android:background="#ffadadad"
        android:textColor="#ff000000"
        android:layout_marginTop="110dp"
        android:layout_below="@+id/ch_enter_cafe_name"
        android:layout_alignRight="@+id/ch_cancel_cafe_hours"
        android:layout_alignEnd="@+id/ch_cancel_cafe_hours" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="   Cancel Cafe hours  "
        android:id="@+id/ch_cancel_cafe_hours"
        android:background="#ffadadad"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_marginTop="74dp"
        android:layout_below="@+id/ch_enter_cafe_hours"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
