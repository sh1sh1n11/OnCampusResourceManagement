<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="msisproject1.com.project1.cafe_hours"
    android:id="@+id/cafe_hours"
    style="@style/AppTheme">

    <ProgressBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ff940011"
        android:indeterminate="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cafe_operating_hours"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Cafe Operating Hours"
        android:layout_alignBottom="@+id/progressBar"
        android:inputType="none" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:text="Start date :"
        android:layout_toStartOf="@id/action_bar"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingEnd="@dimen/abc_action_bar_default_padding_material"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="150dp"
        android:text="End date :"
        android:layout_toStartOf="@id/action_bar_activity_content"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingEnd="@dimen/abc_action_bar_default_padding_material"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/day"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="200dp"
        android:text="Day :"
        android:layout_toStartOf="@id/action_bar_activity_content"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingEnd="@dimen/abc_action_bar_default_padding_material"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/open_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="250dp"
        android:text="Open time :"
        android:layout_toStartOf="@id/action_bar_activity_content"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingEnd="@dimen/abc_action_bar_default_padding_material"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/close_time"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="300dp"
        android:text="Close time :"
        android:layout_toStartOf="@id/action_bar_activity_content"
        style="@style/Base.ThemeOverlay.AppCompat.Dark"
        android:paddingStart="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:paddingEnd="@dimen/abc_action_bar_default_padding_material"
        android:singleLine="true"
        android:inputType="textCapWords" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/confirm_button"
        android:layout_marginEnd="46dp"
        android:layout_below="@+id/close_time"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:background="#ff940011" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     CLOSE TIME     "
        android:onClick="showTimePickerDialog"
        android:layout_marginLeft="100dp"
        android:layout_above="@+id/confirm_button"
        android:layout_alignEnd="@+id/confirm_button"
        android:id="@+id/cafe_hours_close_time"
        android:layout_alignTop="@+id/close_time" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="     OPEN TIME       "
        android:onClick="showTimePickerDialog"
        android:layout_marginLeft="60dp"
        android:layout_alignEnd="@+id/confirm_button"
        android:id="@+id/cafe_hours_open_time"
        android:layout_alignTop="@+id/open_time"
        android:layout_alignBottom="@+id/open_time" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Date"
        android:onClick="showDatePickerDialog"
        android:layout_marginLeft="65dp"
        android:layout_toEndOf="@+id/close_time"
        android:layout_alignEnd="@+id/confirm_button"
        android:id="@+id/cafe_hours_start_date"
        android:layout_alignTop="@+id/sd"
        android:layout_alignBottom="@+id/sd" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" End Date "
        android:onClick="showDatePickerDialog"
        android:layout_marginLeft="0dp"
        android:layout_alignEnd="@+id/confirm_button"
        android:id="@+id/cafe_hours_end_date"
        android:layout_alignBottom="@+id/ed"
        android:layout_alignTop="@+id/ed"
        android:layout_alignStart="@+id/cafe_hours_open_time" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WeekdaySpinner"
        android:layout_marginLeft="1dp"
        android:layout_alignEnd="@+id/confirm_button"
        android:spinnerMode="dropdown"
        android:layout_alignBottom="@+id/day"
        android:layout_alignTop="@+id/day"
        android:layout_alignStart="@+id/cafe_hours_open_time"></Spinner>

</RelativeLayout>
