<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="msisproject1.com.project1.ch_confirm_cancellation">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ch_title_bar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/cancelcafehrs1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All the assigned shift for that duration will be cancelled.Are you sure you want to continue?  "
        android:id="@+id/ch_confirm_warning"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#ff000000"
        android:layout_below="@+id/ch_title_bar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="68dp" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ch_yes_button"
        android:id="@+id/ch_yes_button"
        android:textStyle="bold"
        android:background="#ffadadad"
        android:textColor="#ff000000"
        android:layout_above="@+id/ch_no_button_button"
        android:layout_alignLeft="@+id/ch_no_button_button"
        android:layout_alignStart="@+id/ch_no_button_button"
        android:layout_marginBottom="54dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ch_no_button"
        android:id="@+id/ch_no_button_button"
        android:background="#ffadadad"
        android:textColor="#ff000000"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

</RelativeLayout>